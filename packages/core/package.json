{
  "name": "@marrakesh/core",
  "version": "0.1.0-alpha.2",
  "description": "Minimal, type-safe tool integration for LLMs",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist", "README.md"],
  "peerDependencies": {
    "zod": "^3.0.0",
    "ai": "^3.0.0 || ^4.0.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "ai": {
      "optional": true
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "biome lint src",
    "format": "biome format --write src"
  },
  "devDependencies": {
    "zod": "^3.23.0",
    "tsup": "^8.0.0",
    "vitest": "^1.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  }
}
