{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "files": {
    "ignore": [
      "dist/**",
      "node_modules/**",
      "**/*.d.ts",
      ".pnpm-store/**",
      ".turbo/**",
      "**/coverage/**"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "noUnusedImports": "error"
      },
      "complexity": {
        "noForEach": "warn",
        "noStaticOnlyClass": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useImportType": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "recommended": true
    }
  },
  "overrides": [
    {
      "include": ["package.json"],
      "json": {
        "parser": {
          "allowComments": true
        }
      }
    }
  ]
}
